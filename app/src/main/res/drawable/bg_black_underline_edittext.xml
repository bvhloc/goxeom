<?xml version="1.0" encoding="utf-8"?>
<inset android:insetTop="-1dp" android:insetLeft="-1dp" android:insetRight="-1dp" xmlns:android="http://schemas.android.com/apk/res/android">
    <selector>
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <corners  android:topLeftRadius="0dip"
                    android:topRightRadius="0dip"
                    android:bottomLeftRadius="0dip"
                    android:bottomRightRadius="0dip" />
                <gradient android:startColor="@color/mGreen" android:endColor="@color/mGreen" android:angle="270" />
                <stroke android:width="2px" android:color="#000000" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <corners  android:topLeftRadius="0dip"
                    android:topRightRadius="0dip"
                    android:bottomLeftRadius="0dip"
                    android:bottomRightRadius="0dip" />
                <solid android:color="#FFFFFFFF" />
                <stroke android:width="1dp" android:color="#000000" />
            </shape>
        </item>
    </selector>
</inset>