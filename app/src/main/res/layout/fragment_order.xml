<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mAppBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name_full"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/mDarkGreen"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/upcase_pick_your_service"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/logo_goxeom"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:id="@+id/imgvCourier"
                    android:src="@drawable/main_courier"
                    android:background="@drawable/view_touch_selector"
                    android:contentDescription="@string/fragment_order_instantcourier"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/fragment_order_instantcourier"
                    android:textStyle="bold"
                    android:textColor="@color/mBlackText"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:id="@+id/imgvFood"
                    android:src="@drawable/main_food"
                    android:background="@drawable/view_touch_selector"
                    android:contentDescription="@string/fragment_order_food" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/fragment_order_food"
                    android:textStyle="bold"
                    android:textColor="@color/mBlackText" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:id="@+id/imgvTransport"
                    android:src="@drawable/main_transport"
                    android:background="@drawable/view_touch_selector"
                    android:contentDescription="@string/fragment_order_transport" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/fragment_order_transport"
                    android:textStyle="bold"
                    android:textColor="@color/mBlackText"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:id="@+id/imgvShopping"
                    android:src="@drawable/main_shopping"
                    android:background="@drawable/view_touch_selector"
                    android:contentDescription="@string/fragment_order_shopping" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/fragment_order_shopping"
                    android:textStyle="bold"
                    android:textColor="@color/mBlackText" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
