<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tab_container"
    android:background="@color/mAppBackground"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_history_title"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/mBlackText"
            android:textStyle="bold"/>

        <View style="@style/Divider"/>

        <android.support.design.widget.AppBarLayout
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mAppBackground">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabsHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                app:tabTextAppearance="?android:attr/textAppearanceSmall"
                android:background="@drawable/bg_tab_history_border"
                app:tabBackground="@drawable/bg_tab_history_item"
                app:tabTextColor="@color/mGreen"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabSelectedTextColor="#FFFFFF"
                app:tabGravity="fill"
                style="@style/MyCustomTabLayout"/>

        </android.support.design.widget.AppBarLayout>

        <asia.covisoft.goom.view.NonSwipeableViewPager
            android:padding="@dimen/activity_horizontal_margin"
            android:id="@+id/vpHistory"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

</FrameLayout>
