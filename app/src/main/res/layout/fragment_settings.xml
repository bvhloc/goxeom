<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mAppBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name_full"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/mDarkGreen"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/upcase_pick_your_service"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lnlSignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_touch_selector"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/fragment_settings_signup"
                        android:src="@drawable/ic_user" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_forward"
                            android:drawableRight="@drawable/ic_forward"
                            android:textColor="@color/mBlackText"
                            android:text="@string/fragment_settings_signup"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <View style="@style/Divider"
                            android:background="@color/mBlackDivider"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnlProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_touch_selector"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/fragment_settings_signup"
                        android:src="@drawable/ic_user" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_forward"
                            android:drawableRight="@drawable/ic_forward"
                            android:textColor="@color/mBlackText"
                            android:text="@string/lowcase_profile"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <View style="@style/Divider"
                            android:background="@color/mBlackDivider"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnlTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_touch_selector"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/fragment_settings_termsofservice"
                        android:src="@drawable/ic_info" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_forward"
                            android:drawableRight="@drawable/ic_forward"
                            android:textColor="@color/mBlackText"
                            android:text="@string/fragment_settings_termsofservice"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <View style="@style/Divider"
                            android:background="@color/mBlackDivider"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnlRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_touch_selector"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/fragment_settings_ratethisapp"
                        android:src="@drawable/ic_like" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_forward"
                            android:drawableRight="@drawable/ic_forward"
                            android:textColor="@color/mBlackText"
                            android:text="@string/fragment_settings_ratethisapp"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <View style="@style/Divider"
                            android:background="@color/mBlackDivider"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnlCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_touch_selector"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/fragment_settings_callus"
                        android:src="@drawable/ic_call" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_forward"
                            android:drawableRight="@drawable/ic_forward"
                            android:textColor="@color/mBlackText"
                            android:text="@string/fragment_settings_callus"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <View style="@style/Divider"
                            android:background="@color/mBlackDivider"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
